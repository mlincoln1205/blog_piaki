<p id="notice"><%= notice %></p>

<h1 class="logo-body text-center" style="font-family: 'Notable', sans-serif; font-size: 70px; color: white;">Blog Piaki</h1>

<table class="table">    
    <% @articles.each do |article| %>      
        <div class="card-product">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
          <div class="card-product-infos">
            <p><%= article.created_at.strftime('%d/%m/%Y') %></p>
            <%= link_to(article) do %>
              <h2><%= article.title %></h2>
            <% end %>
            <p><%= article.body.truncate(100, separator: ' ') %> <%= link_to '<i class="fas fa-search-plus"></i>'.html_safe, article %></p>
            <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_article_path(article) %>
            <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, article, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
    <% end %>
</table>

<%= link_to 'New Article', new_article_path, class: "btn btn-outline-dark" %>
