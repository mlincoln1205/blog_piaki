<div class="container mt-5 d-flex h-100">
  <div class="col-6 mx-auto">
    <h2 class="text-center">Editar Cadastro <%#= resource_name.to_s.humanize %></h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, label: 'Nome', required: true, autofocus: true %>
        <%= f.input :last_name, label: 'Sobrenome', required: true, autofocus: true %>
        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password, label: 'Senha',
                    hint: "Deixe em branco se não for alterar a senha",
                    placeholder: "Insira nova senha",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, label: 'Confirmação de Senha',
                    placeholder: "Insira novamente para confirmar a senha",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password, label: 'Senha Atual',
                    hint: "Insira sua senha atual para confirmar as mudanças",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Atualizar Dados", class: "btn btn-outline-dark w-100"%>
      </div>
    <% end %>


    <p><%= link_to "Cancelar meu cadastro", registration_path(resource_name), class: 'page-link text-dark text-center', data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Voltar", :back %>
  </div>
</div>